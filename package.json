  "keywords": [
    "video-player",
    "hls",
    "streaming",
    "html5-video",
    "custom-controls"
  ],
  "author": "peekabu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/peekabu/peekplayer.git"
  },
  "dependencies": {
    "hls.js": "1.5.20"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.9.6",
    "http-server": "^14.1.1"
  },
  "peerDependencies": {
    "hls.js": ">=1.5.20"
  }
}
